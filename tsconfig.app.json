{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    /* add jest lab */
    "types": ["jest", "node", "@testing-library/jest-dom"]


  },
  "include": ["src"]
}